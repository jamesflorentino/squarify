.squarify {
  display: block;
  position: relative;
  box-shadow: 0 0 1px black inset;

  &.-has-image {
    background: transaprent;
    box-shadow: none;
  }

  canvas {
    position: absolute;
    top: 0;
    right: 0;
    left: 0;
    z-index: 1;
  }

  .squarify-img-container {
    position: absolute;
    text-align: left;
    z-index: 2;
    width: 100%;

    &.-preview {
      > img {
        width: 100%;
      }
    }

    &.-cropped {
      overflow: hidden;
    }

    &.-faded {
      opacity: 0.25;
    }

    > img {
      position: absolute;
      cursor: move;
    }
  }
}
